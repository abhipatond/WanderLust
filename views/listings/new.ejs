<% layout("/layouts/boilerplate") -%>

<div class="row">
  <div class="col-8 offset-2">
    <h2>Create New Listing</h2>

    <form method="POST" action="/listings" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listings[title]"
          placeholder="Title"
          id=""
          class="form-control"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please Add Title.
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          type="text"
          name="listings[description]"
          placeholder="Description"
          id=""
          class="form-control"
          required
        ></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please Add Description.
        </div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Image/Url</label>
        <input
          type="text"
          name="listings[image][url]"
          placeholder="image url/link"
          id=""
          class="form-control"
        />
        <!-- <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please Add Image.
        </div> -->
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            name="listings[price]"
            placeholder="price"
            id=""
            class="form-control"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please Add Valid Price.
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listings[country]"
            placeholder="country"
            id=""
            class="form-control"
            required
          />
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please Add Country.
          </div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listings[location]"
          placeholder="location"
          id=""
          class="form-control"
          required
        />
        <div class="valid-feedback">
          Looks good!
        </div>
        <div class="invalid-feedback">
          Please Add Location.
        </div>
      </div>

      <button class="btn btn-dark">Add</button>
      <br><br>
    </form>
  </div>
</div>

<script src="/public/js/validation.js"></script>